@model IEnumerable<BetOven.Models.Users>

@{
    ViewData["Title"] = "Index";
}

<h1>Utilizadores</h1>

<p>
    <a asp-action="Create">Criar um novo Utilizador</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nickname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nacionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Datanasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saldo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fotografia)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nickname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nacionalidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Datanasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Saldo)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.UserId">
                        <img src="~/Imagens/@item.Fotografia" height="60" alt="imagem do user @item.Nome" title="@item.Nome" />
                </a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.UserId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.UserId">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
