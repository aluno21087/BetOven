

@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}


    <div>
        <br /><br /><br /><br /><br />

        <h1>@ViewData["Title"]</h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                    <h4>Criar uma nova conta.</h4>
                    @*recolher o NOME*@
                    <div class="form-group">
                        <label asp-for="Input.Nome"></label>
                        <input asp-for="Input.Nome" class="form-control" />
                        <span asp-validation-for="Input.Nome" class="text-danger"></span>
                    </div>
                    @*recolher o NICKNAME*@
                    <div class="form-group">
                        <label asp-for="Input.Nickname"></label>
                        <input asp-for="Input.Nickname" class="form-control" />
                        <span asp-validation-for="Input.Nickname" class="text-danger"></span>
                    </div>
                    @*recolher o EMAIL*@
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    @*recolher a PASSWORD*@
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    @*recolher a CONFIRM PASSWORD*@
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    @*recolher a DATA NASCIMENTO*@
                    <div class="form-group">
                        <label asp-for="Input.Datanasc"></label>
                        <input asp-for="Input.Datanasc" class="form-control" />
                        <span asp-validation-for="Input.Datanasc" class="text-danger"></span>
                    </div>
                    @*recolher a FOTOGRAFIA*@
                    <div class="form-group">
                        <label asp-for="Input.Fotografia"></label>
                        <label asp-for="Input.Fotografia">Fotografia</label>
                        <input type="file" name="fotoUser" accept=".jpeg,.jpg,.png" style="color:blue;" /> @*-----------------------------------------> se der erro, é provavelmente devido
                        ao nome "fotoUser", que é igual ao
                        do Create.cshtml dos Utilizadores*@
                    </div>
                    <button type="submit" class="btn btn-primary">Registar</button>
                </form>
            </div>
        </div>


    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
