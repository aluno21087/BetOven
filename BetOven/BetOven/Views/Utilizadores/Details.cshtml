@model BetOven.Models.Utilizadores

@{
    ViewData["Title"] = "Details";
    
}

<br />
<br />
<br />
<br />
<br />


<h1>Detalhes</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nickname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nickname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Saldo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Saldo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fotografia)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content("~/Imagens/Users/")@Model.Fotografia" height="200" alt="imagem do user @Model.Nome" title="@Model.Nome" />
        </dd>
    </dl>
</div>

<h4>Lista de depósitos e apostas associadas/os ao/à @Model.Nome</h4>

@if (Model.ListaApostas.Count == 0)
{
    <p>Não há apostas associadas ao Utilizador.</p>
}
else
{
    <table class="table">
        <tr>
            <th>Quantia da aposta</th>
            <th>Data da aposta</th>
            <th>Multiplicador da aposta</th>
            <th>Estado da aposta</th>
            <th>Descrição da aposta</th>
        </tr>
        @foreach (var aposta in Model.ListaApostas)
        {
            <tr>
                <td>@aposta.Quantia</td>
                <td>@aposta.Data</td>
                <td>@aposta.Multiplicador</td>
                <td>@aposta.Estado</td>
                <td>@aposta.Descricao</td>
            </tr>
        }
    </table>
}


@if (Model.ListaDepositos.Count == 0)
{
    <p>Não há depósitos associados ao Utilizador</p>
}
else
{
    <table class="table">
        <tr>
            <th>Montante do depósito</th>
            <th>Formato do pagamento</th>
            <th>Origem do depósito</th>
        </tr>
        @foreach (var deposito in Model.ListaDepositos)
        {
            <tr>
                <td>@deposito.Montante</td>
                <td>@deposito.Formato_pagamento</td>
                <td>@deposito.Origem_deposito</td>
            </tr>
        }
    </table>
}

<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId">Editar</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>

